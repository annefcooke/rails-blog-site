<%= form_for(post) do |f| %>

  <% if post.errors.any? %>
    <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <br>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_field :body %>
  </div>
  <br>
  <div class="field">
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>
  <br>
  <div class="">
    <%= f.submit %>
  </div>
<% end %>
